<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="444dp"
        android:layout_height="170dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_studentnumber"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:background="@drawable/et_newstyle"
            android:hint="رقم الطالب الذي ترغب في الاستعلام عنه"
            app:layout_constraintBottom_toTopOf="@+id/bu_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableRight="@drawable/ic_num"
            android:paddingRight="5dp"/>

        <Button
            android:id="@+id/bu_search"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/bu_newstyle"
            android:drawableRight="@drawable/ic_search"

            android:text="استعلام"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="167dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="غياب الطلاب"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:drawableRight="@drawable/ic_info"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <EditText
                    android:id="@+id/et_numberofstudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ID"
                    android:background="@drawable/et_newstyle2"
                    android:drawableRight="@drawable/ic_num"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="رقم الطالب:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="اسم الطالب"
                    android:background="@drawable/et_newstyle2"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="الاسم:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <EditText
                    android:id="@+id/et_dateofabsence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="تاريخ غياب الطالب"
                    android:background="@drawable/et_newstyle2"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="تاريخ الغياب:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <EditText
                    android:id="@+id/et_reasonsofabsence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="سبب غياب الطالب"
                    android:background="@drawable/et_newstyle2"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="سبب الغياب:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">

                <EditText
                    android:id="@+id/et_notesaboutstudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="ملاحظات عن الطالب"
                    android:background="@drawable/et_newstyle2"
                    android:paddingRight="5dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملاحظات:"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="7dp">

                <Button
                    android:id="@+id/bu_printer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bu_newstyle2"
                    android:text="لقطة الشاشه"
                    android:drawableRight="@drawable/ic_screenshot"
                    android:paddingRight="10dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/bu_savestudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bu_newstyle2"
                    android:text="حفظ"
                    android:drawableRight="@drawable/ic_save"
                    android:paddingRight="10dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>


                <Button
                    android:id="@+id/bu_addstudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bu_newstyle2"
                    android:text="اضافة "
                    android:drawableRight="@drawable/ic_add"
                    android:paddingRight="10dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>